{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "build": "next build",
    "serve": "next serve",
    "lint": "lint-staged",
    "lint:all": "bash -c 'npx tsc --noEmit' && eslint --fix . && prettier . --write && next lint",
    "enter_shell": "docker-compose exec -it -u root frontend bash"
  },
  "dependencies": {
    "@packages/configs": "*",
    "next": "13.4.19",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^6.0.8"
  },
  "devDependencies": {
    "@packages/eslint-config": "*",
    "eslint-config-next": "13.4.19",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "bash -c 'npx tsc --noEmit'",
      "eslint --fix .",
      "prettier . --write",
      "next lint"
    ]
  }
}
